package com.project2.CitizenService.Controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.core.env.Environment;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.project2.CitizenService.Entity.Citizen;
import com.project2.CitizenService.Service.Service1;

@RestController
@RequestMapping("/Citizen")
public class CitizenController {
	@Autowired
	Environment environment;
	@Autowired
	Service1 service;

	@GetMapping("{id}")
	public ResponseEntity<Citizen> getById(@PathVariable Integer id) {
		//return service.getById(id)+" "+environment.getProperty("sever.port",Citizen.toString());
		ResponseEntity<Citizen> citizen = service.getById(id);
        String propertyValue = environment.getProperty("your.property.name");
        
        if (citizen != null) {
            return ResponseEntity.ok(citizen.toString() + " " + propertyValue);
        } else {
            return ResponseEntity.notFound().build();
        }
	}

	@PostMapping("/addCitizen")
	public ResponseEntity<Citizen> addCitizen(@RequestBody Citizen citizen) {
		return service.addCitizen(citizen);
	}
}
